{
    "name": "BrowserExtension",
    "version": "0.0.1",
    "manifest_version": 2,
    "description" : "Gorgeously Funny Pics suggestor",
    "icons": { "16": "icons/smile-16x16.png"/*, "48": "icons/48x48.png", "128": "icons/128x128.png" */},
    "browser_action": {
        "default_icon": { "19": "icons/Mario_19x19.png", "38": "icons/Liverbird-icon_crop_38x38.png" },
        "default_title": "Gorgeously Funny Pics Suggestor",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js"]
    }],
    "devtools_page": "devtools.html"
}